<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kuba_10.frrelanceballparkestimator.Fragments.DiscountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="Discount"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="normal"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="@string/discount"
            android:textSize="20dp"
            android:typeface="normal" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.example.kuba_10.frrelanceballparkestimator.CircularSeekBar
                android:id="@+id/discount_circle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:padding="16dp"
                app:circle_x_radius="100dp"
                app:circle_y_radius="100dp"
                app:max="100"
                app:pointer_alpha_ontouch="100"
                app:circle_color="@android:color/darker_gray"
                app:circle_progress_color="@color/colorAccent"
                app:pointer_color="@color/colorAccent"
                app:pointer_halo_color="@color/colorAccent"
                app:progress="0"
                app:start_angle="270"
                app:end_angle="270"


                app:use_custom_radii="true"


                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/discountIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="TextView"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"

            >



            <Button
                android:id="@+id/back4"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/colorPrimary"
                android:padding="16dp"
                android:text="Back"
                android:textColor="@android:color/white" />

            <Button

                android:id="@+id/next4"

                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_btn_outline"
                android:text="Next"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</FrameLayout>
