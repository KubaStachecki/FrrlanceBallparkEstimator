<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kuba_10.frrelanceballparkestimator.Fragments.FinalFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINAL CALCULATION" />

        <TextView
            android:text="TextView work cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workCost" />

        <TextView
            android:text="TextView calculated cost"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/costSum" />




        <com.github.mikephil.charting.charts.PieChart
            android:padding="30dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



        <Button
            android:layout_gravity="bottom"
            android:text="Generate ballpark estimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ballpark" />
    </LinearLayout>

</FrameLayout>
